<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <property name="autoIncrement" value="true"/>
    <changeSet id="20190822103001" author="andrei">
        <createTable tableName="Event_Category">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="event_id" type="bigint">
            </column>
            <column name="category_id" type="bigint">
            </column>


        </createTable>
        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="Event_Category"
                                 constraintName="fk_eventIdConstraint"
                                 referencedColumnNames="id"
                                 referencedTableName="Event"/>
        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="Event_Category"
                                 constraintName="fk_categoryIdConstraint"
                                 referencedColumnNames="id"
                                 referencedTableName="Category"/>


    </changeSet>
    <changeSet id="20190822103002" author="teodora">
        <loadData
                file="config/liquibase/data/event_category.csv"
                separator=";"
                tableName="Event_Category"/>
    </changeSet>


    <changeSet id="20190822103003" author="teodora" runOnChange="true">
        <loadUpdateData
                primaryKey="id"
                file="config/liquibase/data/event_category.csv"
                separator=";"
                tableName="Event_Category"/>
    </changeSet>


</databaseChangeLog>